  #     - my_network
  #   volumes:
  #     - ./backend:/app

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
      args:
        FRONTEND_URL: ${FRONTEND_URL}
        BACKEND_URL: ${BACKEND_URL}
        MEDIA_URL: ${MEDIA_URL}
        NODE_ENV: ${NODE_ENV}
    depends_on:
      backend:
        condition: service_started
    ports:
      - "3000:3000"
    networks:
      - my_network
    volumes:
      - ./frontend:/app

volumes:
  # postgres_data:
  #   driver: local
  milvus_minio_data:
    driver: local
  etcd_data:
    driver: local
  milvus_data:
    driver: local

networks:
  my_network:
    driver: bridge